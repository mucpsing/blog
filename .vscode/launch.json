  "version": "0.2.0",
  "configurations": [
    {
      "name": "TS-node-debug",
      "type": "node",
      "request": "launch",
      "program": "${file}",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "cwd": "${workspaceRoot}",
      "args": ["${relativeFile}"],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "stopOnEntry": false // 是否启动后自动停止程序
    }
  ]
}
